<div class="container px-5">
  <div class="row">
    <%= render 'leftbar', user: @user, book: @newbook %>

    <%# 右側部分 %>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= link_to(user_path(@book.user)) do %>
                <%= image_tag @book.user.get_profile_image(100,100) %><br>
                <%= @book.user.name %>
              <% end %>
            </td>
            <td><%= link_to "#{@book.title}", book_path(@book.id) %></td>
            <td><%= @book.body %></td>
            <td>
              <% if @book.favorited_by?(current_user) %>
                <%= link_to book_favorite_path(@book), method: :delete do %>
                  <i class="fa-solid fa-heart" style="color: #ff0000;"></i><%= @book.favorites.count %>
                <% end %>
              <% else %>
                <%= link_to book_favorite_path(@book), method: :post do %>
                  <i class="fa-solid fa-heart" style="color: #74C0FC;"></i><%= @book.favorites.count %>
                <% end %>
              <% end %>
            </td>
            <td>コメント数:<%= @book.book_comments.count %></td>

            <% if @book.user == current_user %>
              <td>
                <%= link_to 'Edit', edit_book_path(@book), class: "btn btn-success" %>
              </td>
              <td>
                <%= link_to 'Destroy', book_path(@book), method: :delete, "data-confirm" => 'Are you sure?', class: "btn btn-danger" %>
              </td>
            <% end %>
          <tr>
        </tbody>
      </table>
      <div>
        <table>
          <tbody>
            <% @book.book_comments.each do |book_comment| %>
              <tr>
                <td>
                  <%= link_to(user_path(@book.user)) do %>
                    <%= image_tag book_comment.user.get_profile_image(100,100) %><br>
                    <%= book_comment.user.name %>
                  <% end %>
                </td>
                <td><%= book_comment.comment %></td>
                <td>
                  <% if book_comment.user == current_user %>
                    <%= link_to 'Destroy', book_book_comment_path(book_comment.book, book_comment), method: :delete, class: "btn btn-danger" %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div>
        <%= form_with model: [@book, @book_comment] do |f| %>
          <%= f.text_area :comment, size: '75x5' %>
          <%= f.submit "送信" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
