<div class="container px-5">
  <div class="row">
    <div class="mx-auto">
      <h1>User info</h1>

      <% if @user.errors.any? %>
        <h3><%= @user.errors.count %> error prohibited this obj from being saved:</h3>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

      <%= form_with model: @user do |f| %>
        <p>Name</p>
        <%= f.text_field :name %>
        <p>ProfileImage</p>
        <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>  
        <p>Introduction</p>
        <%= f.text_area :introduction %><br>
        
        <%= f.submit 'Update User', class: "btn btn-secondary" %>
        
      <% end %>
    </div>
  </div>
</div>